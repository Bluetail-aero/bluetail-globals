{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "src/@types"
    ],
    "jsx": "react",
    "target": "esnext",
    "module": "CommonJS",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@test/*": [
        "../test/*"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/@types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}